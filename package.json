{
  "name": "@mcp-dockmaster/mcp-server-devtools",
  "version": "1.0.0",
  "description": "MCP server for compiling and auditing Solidity and Circom code",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-server-devtools": "./dist/index.js"
  },
  "scripts": {
    "prepare": "npm run build",
    "test": "npm run build && node tests/tools.test.js",
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "tsc -w",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "solc": "^0.8.24",
    "circom": "^2.1.6",
    "circomspect": "^0.2.4",
    "slither-analyzer": "^0.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
